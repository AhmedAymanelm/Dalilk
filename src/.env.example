# ==================== Model IDs ====================
# للـ Generation (Groq)
GENERATION_MODEL_ID="llama-3.1-70b-versatile"

# للـ Embedding (Hugging Face)
# نماذج مقترحة:
# - sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (صغير، سريع، 384)
# - sentence-transformers/all-MiniLM-L6-v2 (إنجليزي فقط، 384)
# - intfloat/multilingual-e5-large (كبير، دقيق، 1024)
EMBEDDING_MODEL_ID="sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"
EMBEDDING_MODEL_SIZE=384


INPUT_DAFAULT_MAX_CHARACTERS=1024
GENERATION_DAFAULT_MAX_TOKENS=200
